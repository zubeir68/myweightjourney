      {{else}}
        {{#link-to 'login' class='item'}}Login{{/link-to}}
      {{/if}}      
    </div>
    <br>
    <div class="ui grid">
      <div class="sixteen wide column">
        {{outlet}}
      </div>
    </div>
  </div>
{{/if}}

