{{!-- app/templates/application.hbs --}}

{{#if (media 'isDesktop')}}
  <div class="ui container">
    <div class="ui grid">
      <div class="one wide column">
        <div class="ui visible massive very wide inverted vertical sidebar menu">
          <a id="main_heading" class="item">
            My Weight Journey
          </a>
          {{#link-to "dashboard" class="item"}}
            Dashboard
          {{/link-to}}
          {{#link-to "edit" class="item"}}
            Edit person
          {{/link-to}}
        </div>
      </div>
      <div class="fifteen wide column">
          <div class="ui grid">
            <div class="fifteen wide column"></div>
            <div class="one wide column">
              <br>
              <br>
              {{#if session.isAuthenticated}}
                <button class="ui inverted red circular button" {{action 'invalidateSession'}}>Logout</button>
              {{else}}
                {{#link-to 'login'}} <button class="ui inverted red circular button">Login</button> {{/link-to}}
              {{/if}}
            </div>
          </div>
        {{outlet}}
      </div>
    </div>
  </div>
{{/if}}

